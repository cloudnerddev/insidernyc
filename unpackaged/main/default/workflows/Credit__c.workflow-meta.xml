<?xml version="1.0" encoding="utf-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Credit_Expiry</fullName>
        <ccEmails>list@insidernyc.com</ccEmails>
        <description>Credit Expiry</description>
        <protected>false</protected>
        <senderType>DefaultWorkflowUser</senderType>
        <template>Insider/Credit_Expiry</template>
    </alerts>
    <rules>
        <fullName>Credit Expiry - 180 Days</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Credit__c.Expiration_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Credit__c.Expiration_Date__c</field>
            <operation>greaterOrEqual</operation>
            <value>TODAY</value>
        </criteriaItems>
        <criteriaItems>
            <field>Credit__c.Status__c</field>
            <operation>notEqual</operation>
            <value>Redeemed,Expired</value>
        </criteriaItems>
        <criteriaItems>
            <field>Credit__c.Days_Until_Expiration__c</field>
            <operation>greaterOrEqual</operation>
            <value>180</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Credit_Expiry</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Credit__c.Expiration_Date__c</offsetFromField>
            <timeLength>-180</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
