<?xml version="1.0" encoding="utf-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Global_Entry_Expiry</fullName>
        <ccEmails>list@insidernyc.com</ccEmails>
        <description>Global Entry Expiry</description>
        <protected>false</protected>
        <senderType>DefaultWorkflowUser</senderType>
        <template>Insider/Global_Entry_Expiry</template>
    </alerts>
    <fieldUpdates>
        <fullName>Set_Owner_to_Claude</fullName>
        <field>OwnerId</field>
        <lookupValue>insider@cloudna.io</lookupValue>
        <lookupValueType>User</lookupValueType>
        <name>Set Owner to Claude</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>LookupValue</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Global Entry Expiry - 180 Days</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Contact.Global_Entry_TSA_Expiry__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Contact.Global_Entry_TSA_Expiry__c</field>
            <operation>greaterOrEqual</operation>
            <value>TODAY</value>
        </criteriaItems>
        <criteriaItems>
            <field>Contact.Global_Entry_TSA_Days_Until_Expiration__c</field>
            <operation>greaterOrEqual</operation>
            <value>180</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>Global_Entry_Expiry</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Contact.Global_Entry_TSA_Expiry__c</offsetFromField>
            <timeLength>-180</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
